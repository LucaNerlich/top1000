{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "nodemon",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",            
            "program": "-w debug/src ${workspaceFolder}/debug/src/index.js",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "nodemon"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "debugscript",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",            
            "program": "${workspaceFolder}/scripts/scrape/metacritic.js",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}